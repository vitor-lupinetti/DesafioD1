@model Desafio.D1.Application.ViewModels.ClienteUpdateViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar cliente</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div class="row">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div >
                        <input asp-for="Id" type="hidden"/>
                    </div>
                    <div>
                        <input type="hidden" asp-for="TelefoneId"  />
                    </div>
                    <div>
                        <input type="hidden" asp-for="EnderecoId"  />
                    </div>
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DataNascimento" class="control-label"></label>
                        <input asp-for="DataNascimento" class="form-control" />
                        <span asp-validation-for="DataNascimento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cpf" class="control-label"></label>
                        <input asp-for="Cpf" class="form-control" />
                        <span asp-validation-for="Cpf" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Rg" class="control-label"></label>
                        <input asp-for="Rg" class="form-control" />
                        <span asp-validation-for="Rg" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Facebook" class="control-label"></label>
                        <input asp-for="Facebook" class="form-control" />
                        <span asp-validation-for="Facebook" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Linkedin" class="control-label"></label>
                        <input asp-for="Linkedin" class="form-control" />
                        <span asp-validation-for="Linkedin" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Twitter" class="control-label"></label>
                        <input asp-for="Twitter" class="form-control" />
                        <span asp-validation-for="Twitter" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Instagram" class="control-label"></label>
                        <input asp-for="Instagram" class="form-control" />
                        <span asp-validation-for="Instagram" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <p>
            @Html.ActionLink("Novo telefone", "Create", "Telefones", new { clienteId = Model.Id }) |

        </p>
        <table class="table table-bordered">
            <thead>
                <tr>

                    <th>
                        Numero
                    </th>
                    <th>
                        Identificacao
                    </th>
                </tr>
            </thead>
            @foreach (var telefone in Model.Telefones)
            {
                <tbody>

                    <tr>

                        <td>
                            @telefone.Numero
                        </td>
                        <td>
                            @telefone.Identificacao
                        </td>

                    </tr>
                </tbody>
            }
        </table>

    </div>

    <div class="row col-md-6">
        <p>
            @Html.ActionLink("Novo endereço", "Create", "Enderecos", new { clienteId = Model.Id }) |
        </p>
        <table class="table table-bordered">
            <thead>
                <tr>

                    <th>
                        Numero
                    </th>
                    <th>
                        Bairro
                    </th>
                    <th>
                        Cep
                    </th>
                    <td>
                        Rua
                    </td>
                </tr>
            </thead>
            @foreach (var endereco in Model.Enderecos)
            {
                <tbody>
                    <tr>
                        <td>
                            @endereco.Numero
                        </td>
                        <td>
                            @endereco.Bairro
                        </td>
                        <td>
                            @endereco.Cep
                        </td>
                        <td>
                            @endereco.Rua
                        </td>

                    </tr>
                </tbody>
            }
        </table>

    </div>
</div>


<div>
    <a asp-action="Index">Voltar para a tela inicial</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
