@model Desafio.D1.Application.ViewModels.ClienteUpdateViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ClienteUpdateViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefoneId" class="control-label"></label>
                <input asp-for="TelefoneId" class="form-control" />
                <span asp-validation-for="TelefoneId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnderecoId" class="control-label"></label>
                <input asp-for="EnderecoId" class="form-control" />
                <span asp-validation-for="EnderecoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rg" class="control-label"></label>
                <input asp-for="Rg" class="form-control" />
                <span asp-validation-for="Rg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Facebook" class="control-label"></label>
                <input asp-for="Facebook" class="form-control" />
                <span asp-validation-for="Facebook" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Linkedin" class="control-label"></label>
                <input asp-for="Linkedin" class="form-control" />
                <span asp-validation-for="Linkedin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Twitter" class="control-label"></label>
                <input asp-for="Twitter" class="form-control" />
                <span asp-validation-for="Twitter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instagram" class="control-label"></label>
                <input asp-for="Instagram" class="form-control" />
                <span asp-validation-for="Instagram" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <p>
            @Html.ActionLink("Create", "Create", "Telefones", new { clienteId = Model.Id }) |

        </p>
        <table class="table">
            <thead>
                <tr>

                    <th>
                        Numero
                    </th>
                    <th>
                        Identificacao
                    </th>
                </tr>
            </thead>
            @foreach (var telefone in Model.Telefones)
            {
                <tbody>

                    <tr>

                        <td>
                            @telefone.Numero
                        </td>
                        <td>
                            @telefone.Identificacao
                        </td>

                    </tr>
                </tbody>
            }
        </table>

    </div>

    <div class="row col-md-6">
        <p>
            @*<a asp-action="Create" asp-controller="Enderecos">Create New</a>*@
            @Html.ActionLink("Create", "Create","Enderecos", new { clienteId = Model.Id }) |
        </p>
        <table class="table">
            <thead>
                <tr>

                    <th>
                        Numero
                    </th>
                    <th>
                        Bairro
                    </th>
                    <th>
                        Cep
                    </th>
                    <td>
                        Rua
                    </td>
                </tr>
            </thead>
            @foreach (var endereco in Model.Enderecos)
            {
                <tbody>
                    <tr>
                        <td>
                            @endereco.Numero
                        </td>
                        <td>
                            @endereco.Bairro
                        </td>
                        <td>
                            @endereco.Cep
                        </td>
                        <td>
                            @endereco.Rua
                        </td>

                    </tr>
                </tbody>
            }
        </table>

    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
